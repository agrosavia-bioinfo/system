#xterm -fn 7x14 -bg black -fg skyblue -geometry 80x40 -name xR -e R 

FILE=$1
FNT='UbuntuMono'
FONT="8x16"
BG=black
FG=skyblue
title=R
COMMAND="-e R"
cmm="xterm-R -fa $FNT -fs 12 -geometry 80x40 -fn $FONT -bg $BG -fg $FG -title $title -e R"
$cmm &
